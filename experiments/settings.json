{
    "source": {
        "git": {
            "branch": "effect-handlers-compilation",
            "url": "https://github.com/links-lang/links.git"
        }
    },
    "compilers": [
        {
            "name": "linksc",
            "comment": "The Links compiler",
            "exec": "links",
            "defaultFlags": "-c --native --verbose"
        },
        {
            "name": "linksi",
            "comment": "The Links interpreter",
            "exec": "links",
            "defaultFlags": "--config=$LINKS_SOURCE_DIR/measure.config"
        },
        {
            "name": "ocamlopt",
            "comment": "The OCaml optimising compiler",
            "exec": "ocamlopt",
            "defaultFlags": "-dlambda -dclambda -dcmm"
        }
    ],
    "experiments": [
